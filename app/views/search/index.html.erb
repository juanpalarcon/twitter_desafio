<div class="search-page">
  <div >
    <% if @tweets.exists? %>
      <h1>Results</h1>
    <% else %>
      <h1>No se encontraron coincidencia ...</h1>
    <% end %>

    <% @tweets.each do |tweet|%>
      <div class='container mx-5'>
        <img class='rounded-circle mb-2' src="<%= tweet.user&.user_photo %>" width="100" height="100" style="margin: 10px 0"  >
      </div>
  
      <%= tweet.user.get_name %>
      <% tweet.content.to_s.split(' ').each do |word| %>
        <% if word.start_with?('#') %>
          <%= link_to word, search_path(query: word) %>
        <%else %>
          <%= word %>
        <%end %>
      <% end %>
      
    <% end %>
  </div>
 
</div>  